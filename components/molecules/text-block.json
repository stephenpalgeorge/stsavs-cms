{
  "collectionName": "components_molecules_text_blocks",
  "info": {
    "name": "text block",
    "icon": "align-left",
    "description": "Use this component to render a block of text with an optional title and a collection of buttons. As the text fields are not required, you can also use this component to just render a row of buttons."
  },
  "options": {},
  "attributes": {
    "body": {
      "type": "richtext",
      "required": false
    },
    "actions": {
      "type": "component",
      "repeatable": true,
      "component": "atoms.button-link"
    },
    "title": {
      "type": "string"
    },
    "title_level": {
      "type": "enumeration",
      "enum": [
        "h1",
        "h2",
        "h3"
      ],
      "default": "h2"
    },
    "color_theme": {
      "type": "enumeration",
      "enum": [
        "purple",
        "red",
        "dark",
        "light"
      ]
    },
    "pre_title": {
      "type": "string"
    }
  }
}